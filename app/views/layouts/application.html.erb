<!DOCTYPE html>
<html>
  <head>
    <title>Timesheet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if ['devise/registrations', 'devise/sessions', 'jobs', 'job_applications', 'interviews', 'users', 'companies'].include?(params[:controller]) && ['new', 'index', 'new_application', 'edit', 'set_response'].include?(params[:action]) %>
  <body class="text-center" data-gr-c-s-loaded="true">

  <% else %>
  <body>
  <% end %>
    <nav class="navbar navbar-expand navbar-transparent bg-transparent">
      <a class="navbar-brand" href="<%= root_url %>"><%= image_tag("Weebuylogo1.png", size: "72", class: "img-circle") %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" >
        <h2 class= "company"> <b>WeeBuy</b> </h2>
        <ul class="navbar-nav ml-auto">
          <%= render 'users/menu/navbar' %>
          <%= render 'users/menu/registration_items' %>
          <%= render 'users/menu/login_items' %>
        </ul>
      </div>
    </nav>

    <%= yield %>


  </body>

</html>
